                        android:layout_height="1dp"
                        android:background="#C9C3C3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_icon"
                        app:layout_constraintVertical_bias="1.0" />
