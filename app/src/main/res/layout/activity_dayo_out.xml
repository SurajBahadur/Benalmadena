                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="Tivoli World"
                            android:textColor="@color/colorPrimary"
                            android:textSize="17sp" />


                    </LinearLayout>

                    <View
